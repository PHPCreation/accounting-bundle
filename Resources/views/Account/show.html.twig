{% extends '::layout.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('elcweb_accounting_account_index') }}">Accounts</a></li>
    <li class="active">{{ account.name }}</li>
{% endblock breadcrumb %}

{% block content %}
    {% spaceless %}
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                {% for entry in account.entries %}
                    <tr>
                        <td><a href="{{ path('elcweb_accounting_transaction_show', { id: entry.transaction.id }) }}">{{ entry.transaction.id }}</a></td>
                        <td>{{ entry.amount }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endspaceless %}
{% endblock %}
